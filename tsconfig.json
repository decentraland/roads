{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "diagnostics": true,
    "baseUrl": ".",
    "moduleResolution": "node",
    "stripInternal": true,
    "pretty": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true,
    "preserveConstEnums": true,
    "lib": ["es2017"]
  }
}
